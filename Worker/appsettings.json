{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=ShipmentService;Trusted_Connection=True;Integrated Security=true;MultipleActiveResultSets=true;Encrypt=false"
  },
  "Azure": {
    "ServiceBus": {
      "ConnectionString": "YOUR_SERVICE_BUS_CONNECTION",
      "QueueName": "labels-to-process"
    },
    "BlobStorage": {
      "ConnectionString": "YOUR_BLOB_CONNECTION",
      "ContainerName": "shipment-labels"
    }
  },
  
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": { "Microsoft": "Error", "Tpa.Web.Settings": "Information" }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "D:\\logs\\worker-log-.txt",
          "rollingInterval": "Day",
          "shared": true,
          "fileSizeLimitBytes": 2000000,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 30,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Properties": {
      "Application": "Shipment.Worker"
    }
  }
}
